
<MenuWidget>:
    canvas.before:
        Color:
            rgba: 0,0,0,.8
        Rectangle:
            size: self.size
            pos: self.pos
    Label:
        font_size: "60dp"
        text: root.parent.menu_title
        pos_hint: {"center_x" : .5, "center_y":.6}
    Button:
        font_size: "30dp"
        text: root.parent.menu_button
        pos_hint: {"center_x" : .5, "center_y":.3}
        size_hint: .2,.15
        on_press: root.parent.on_menu_button_pressed()
        background_normal: ""
        background_color: 1,.3,.4,.8